{
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)",
    ":disableDependencyDashboard"
  ],
  "ignorePresets": [
    ":semanticPrefixFixDepsChoreOthers"
  ],
  "prConcurrentLimit": 0,
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": true,
  "semanticCommits": "enabled",
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "description": "Disable MAJOR update types",
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    }
  ],

  "ignoreDeps": [
    "golang.org/x/net"
  ],
  "force": {
    "constraints": {
      "go": "1.20"
    }
  },
  "regexManagers": [
    {
      "fileMatch": ["^Makefile$"],
      "matchStrings": ["TERRAFORM_VERSION=(?<currentValue>.*?)\\n"],
      "autoReplaceStringTemplate": "TERRAFORM_VERSION={{{newValue}}}\\n",
      "depNameTemplate": "hashicorp/terraform",
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "semver"
    },
    {
      "fileMatch": ["^Makefile$"],
      "matchStrings": ["ENVTEST_VERSION=(?<currentValue>.*?)\\n"],
      "autoReplaceStringTemplate": "ENVTEST_VERSION={{{newValue}}}\\n",
      "depName": "sigs.k8s.io/controller-runtime/tools/setup-envtest",
      "datasource": "gomod",
      "versioningTemplate": "semver"
    }
  ]
}